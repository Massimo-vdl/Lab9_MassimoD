<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment2_massimo.FXMLController">
   <children>
      <BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <center>
            <Pane fx:id="racePane" maxHeight="400.0" prefHeight="400.0" prefWidth="600.0" style="-fx-border-width: 2; -fx-border-color: black; -fx-background-color: white;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </Pane>
         </center>
         <bottom>
            <HBox fx:id="Hbox" prefHeight="115.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox fx:id="buttonVbox" prefHeight="100.0" prefWidth="375.0" spacing="10.0">
                     <children>
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonPressed" prefHeight="35.0" prefWidth="215.0" style="-fx-background-color: lime green;" text="Start">
                           <font>
                              <Font name="Comic Sans MS" size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseButtonPressed" prefHeight="35.0" prefWidth="215.0" style="-fx-background-color: yellow;" text="Pause">
                           <font>
                              <Font name="Comic Sans MS" size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonPressed" prefHeight="35.0" prefWidth="215.0" style="-fx-background-color: Red;" text="Exit">
                           <font>
                              <Font name="Comic Sans MS" size="16.0" />
                           </font>
                        </Button>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <Label fx:id="marathonStatusLabel" alignment="TOP_LEFT" prefHeight="115.0" prefWidth="225.0" text="Press Start for the race to begin">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <BorderPane.margin>
                  <Insets top="5.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
